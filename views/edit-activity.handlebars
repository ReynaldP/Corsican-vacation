<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Modifier une activité</h3>
                </div>
                <div class="card-body">
                    <form action="/activities/update/{{dayId}}/{{activity.id}}?_method=PUT" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nom de l'activité</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{activity.name}}" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="time" class="form-label">Horaire</label>
                            <input type="text" class="form-control" id="time" name="time" value="{{activity.time}}" placeholder="ex: 10h00-12h00">
                        </div>
                        
                        <div class="mb-3">
                            <label for="price" class="form-label">Prix (€)</label>
                            <input type="number" class="form-control" id="price" name="price" value="{{activity.price}}" min="0" step="0.01">
                        </div>
                        
                        <div class="mb-3">
                            <label for="link" class="form-label">Lien (site web)</label>
                            <input type="url" class="form-control" id="link" name="link" value="{{activity.link}}" placeholder="https://...">
                        </div>
                        
                        <div class="mb-3">
                            <label for="notes" class="form-label">Notes</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3">{{activity.notes}}</textarea>
                        </div>
                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="booked" name="booked" {{#if activity.booked}}checked{{/if}}>
                            <label class="form-check-label" for="booked">
                                Réservé
                            </label>
                        </div>
                        
                        <div class="mb-3">
                            <label for="tags" class="form-label">Tags (séparés par des virgules)</label>
                            <input type="text" class="form-control" id="tags" name="tags" value="{{activity.tagsString}}" placeholder="ex: Randonnée, Plage, Culture">
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Mettre à jour</button>
                            <div>
                                <a href="/dashboard" class="btn btn-secondary me-2">Annuler</a>
                                <form action="/activities/delete/{{dayId}}/{{activity.id}}?_method=DELETE" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette activité?')">
                                        Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>